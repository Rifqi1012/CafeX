<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8E3B6">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Detail Kafe"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#834D1E"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCafeName"
            android:text="Cafe Cerita Kita"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#834D1E"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Alamat :"
            android:textColor="#834D1E"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_marginBottom="8dp"
            android:textColor="#834D1E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Rating :"
            android:textColor="#834D1E"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvRating"
            android:textColor="#834D1E"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Gambar Kafe"
            android:textColor="#834D1E"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ivCafe"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cafexlogonobg"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <Button
                android:id="@+id/btnBack"
                android:layout_weight="1"
                android:text="Kembali"
                android:backgroundTint="#FCF2D9"
                android:textColor="#834D1E"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_button_rounded"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnMaps"
                android:layout_weight="1"
                android:text="Buka di Maps"
                android:backgroundTint="#834D1E"
                android:background="@drawable/bg_button_rounded"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
